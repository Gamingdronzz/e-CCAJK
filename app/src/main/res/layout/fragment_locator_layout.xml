<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear_layout_locator_fragment"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_height="wrap_content">


        <android.support.design.widget.TabLayout
            android:id="@+id/tab_locator"
            app:tabGravity="fill"
            app:tabMode="fixed"
            android:background="@color/colorPrimaryLight"
            app:tabIndicatorColor="@color/colorBlack"
            app:tabIndicatorHeight="4dp"
            app:tabSelectedTextColor="@color/colorBlack"
            app:tabTextColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_locator"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_no_location_lcoator_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:clickable="true">

        <ImageButton
            android:id="@+id/image_btn_refresh_tab_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_large"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_refresh_black_24dp" />

        <TextView
            android:id="@+id/textview_locator_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorWhite"
            android:padding="@dimen/padding_large"
            android:text="Locator will not work without Internet Connection."
            android:textAlignment="center"
            android:textSize="@dimen/text_20" />
    </RelativeLayout>


</FrameLayout>



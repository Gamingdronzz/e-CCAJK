<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="grievancefragment"
    tools:context=".Fragments.GrievanceFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="?attr/actionBarSize"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:paddingLeft="@dimen/padding_large"
                    android:text="Upload Using"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_12" />

                <RadioGroup
                    android:id="@+id/groupNumberType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_medium">

                    <RadioButton
                        android:id="@+id/radioButtonPensioner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="Pensioner Code" />

                    <RadioButton
                        android:id="@+id/radioButtonHR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="HR Number" />

                    <RadioButton
                        android:id="@+id/radioButtonStaff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Staff Number" />

                </RadioGroup>

            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_pensioner_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorOffWhite"
                android:padding="@dimen/padding_small">

                <AutoCompleteTextView
                    android:id="@+id/autocomplete_pcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/padding_large"
                    android:hint="Pensioner Code"
                    android:inputType="number"
                    android:maxLength="15"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small">

                <AutoCompleteTextView
                    android:id="@+id/autocomplete_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/padding_large"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorOffWhite"
                android:padding="@dimen/padding_small">

                <AutoCompleteTextView
                    android:id="@+id/autocomplete_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/padding_large"
                    android:hint="E-Mail"
                    android:inputType="textEmailAddress"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingStart="@dimen/padding_small"
                    android:text="Grievance Type"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_15" />

                <Spinner
                    android:id="@+id/spinner_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:background="@drawable/bg_spinner"
                    android:spinnerMode="dropdown"></Spinner>


            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorOffWhite"
                android:padding="@dimen/padding_small">

                <EditText
                    android:id="@+id/edittext_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/padding_large"
                    android:hint="Grievance Details"
                    android:singleLine="false" />

            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingStart="@dimen/padding_small"
                    android:text="Grievance Submitted By"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_15" />

                <Spinner
                    android:id="@+id/spinner_submitted_by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:background="@drawable/bg_spinner"
                    android:spinnerMode="dropdown"></Spinner>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_selected_file_count_grievance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="@dimen/padding_medium"
                    android:gravity="center"
                    android:padding="@dimen/padding_medium"
                    android:text="0"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_15"
                    android:textStyle="bold" />

                <!--<ImageButton-->
                <!--android:id="@+id/imageButton_removeAllFiles"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@color/colorAccentLight"-->
                <!--android:layout_above="@+id/textview_add_inspection_image"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:padding="@dimen/padding_medium"-->
                <!--app:srcCompat="@drawable/ic_close_black_24dp"-->
                <!--android:layout_alignParentEnd="true"/>-->

                <TextView
                    android:id="@+id/imageButton_removeAllFiles"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/imageButton_removeAllFiles"
                    android:background="@color/colorAccentLight"
                    android:drawablePadding="@dimen/padding_medium"
                    android:padding="@dimen/padding_medium"
                    android:text="Remove All" />

            </RelativeLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_selected_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/button_attach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_submit"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_medium"
        android:background="@drawable/custom_button_rounded"
        android:drawableTint="@color/colorPrimary"
        android:text="Add File"
        android:textColor="@color/colorWhite" />

    <Button

        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_button"
        android:text="Submit"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_18"
        android:textStyle="bold" />

</RelativeLayout>



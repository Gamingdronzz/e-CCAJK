<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:elevation="@dimen/elevation_medium"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/colorPrimaryLight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_medium"
        android:background="@color/colorWhite">

        <ImageButton
            android:layout_width="40dp"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_height="40dp"
            android:fitsSystemWindows="true"
            android:scaleType="fitCenter"
            android:id="@+id/map_button"
            android:src="@drawable/ic_map"/>


        <LinearLayout
            android:id="@+id/loc_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/map_button"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_location_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location name"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_18"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textview_location_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location District"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_15" />


        </LinearLayout>

        <!--<RelativeLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent">-->

        <!--</RelativeLayout>-->


        <!--<TextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loc_layout"
            android:layout_marginStart="@dimen/margin_xxxxlarge"
            android:gravity="top"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_15" />-->


        <TextView
            android:id="@+id/textview_get_directions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/custom_button_accent_light"
            android:drawableTint="@color/colorBlack"
            android:gravity="center_vertical"
            android:text="Get Directions"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_15"
            android:textStyle="bold"
            android:visibility="gone"
            />


    </RelativeLayout>


</LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inspection_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ccajk.Fragments.InspectionFragment">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textview_selected_image_count_inspection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimaryLight"
        android:padding="@dimen/padding_medium"
        android:text="No Image Selected"
        android:textAlignment="center"
        android:textSize="@dimen/text_15"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_selected_images_inspection"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/textview_selected_image_count_inspection"
        android:background="@color/colorOffWhite">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textinput_location_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview_current_location_coordinates"
        android:padding="@dimen/padding_medium">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edittext_current_location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="Enter Location Name"
            android:padding="@dimen/padding_medium"
            android:textAlignment="textStart"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />


    </android.support.design.widget.TextInputLayout>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textview_current_location_coordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_inspection"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:drawablePadding="@dimen/padding_medium"
        android:gravity="center_vertical"
        android:foregroundGravity="center_vertical"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding_medium"
        android:text="Location" />


    <LinearLayout
        android:id="@+id/buttons_inspection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_upload"
        android:layout_margin="@dimen/margin_small"
        android:orientation="horizontal">


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textview_add_inspection_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:layout_weight="3"
            android:background="@drawable/custom_button_primary_light"
            android:clickable="true"
            android:drawableTint="@color/colorBlack"
            android:padding="@dimen/padding_medium"
            android:text="Add Image"
            android:textAlignment="center"
            android:textColor="@color/colorBlack" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/imageButton_removeAllFiles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:layout_weight="3"
            android:background="@drawable/custom_button_primary_light"
            android:clickable="true"
            android:drawableTint="@color/colorBlack"
            android:padding="@dimen/padding_medium"
            android:text="Remove All Files"
            android:textAlignment="center"
            android:textColor="@color/colorBlack" />


    </LinearLayout>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_button"
        android:text="UPLOAD"
        android:textColor="@color/colorOffWhite"
        android:textSize="@dimen/text_20" />

</RelativeLayout>
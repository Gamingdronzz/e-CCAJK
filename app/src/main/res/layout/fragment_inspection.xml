<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inspection_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ccajk.Fragments.InspectionFragment">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textview_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:drawableTint="@color/colorAccent"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_large"
        android:text="Choose Image to Upload"
        android:textSize="@dimen/text_18" />

    <ImageView
        android:id="@+id/imageview_selected_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_above="@+id/textview_choose"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textview_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_upload"
        android:layout_marginBottom="@dimen/margin_medium"
        android:gravity="center_vertical"
        android:text="Current Location - N/A"
        android:textAlignment="textStart"
        tools:ignore="RtlCompat" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_button"
        android:text="UPLOAD"
        android:textColor="@color/colorOffWhite"
        android:textSize="@dimen/text_20" />

</RelativeLayout>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inspection_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ccajk.Fragments.InspectionFragment">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textview_add_inspection_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/edittext_current_location_name"
        android:clickable="true"
        android:drawableTint="@color/colorAccent"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_large"
        android:text="Add Inspection Image"
        android:textSize="@dimen/text_18" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textview_selected_image_count_inspection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview_add_inspection_image"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding_medium"
        android:text="Selec"
        android:textSize="@dimen/text_15"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton_removeAllFiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview_add_inspection_image"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@color/colorAccent"
        android:padding="@dimen/padding_small"
        app:srcCompat="@drawable/ic_close_black_24dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_selected_images_inspection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/textview_selected_image_count_inspection"
        android:layout_alignParentTop="true"
        android:background="@color/colorOffWhite">

    </android.support.v7.widget.RecyclerView>

    <EditText
        android:id="@+id/edittext_current_location_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textview_current_location_coordinates"
        android:gravity="center_vertical"
        android:hint="Location Name"
        android:padding="@dimen/padding_medium"
        android:textAlignment="textStart"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textview_current_location_coordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_upload"
        android:layout_marginBottom="@dimen/margin_medium"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_medium"
        android:text="Location Coordinates- N/A"
        android:textAlignment="textStart"
        tools:ignore="RtlCompat" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_button"
        android:text="UPLOAD"
        android:textColor="@color/colorOffWhite"
        android:textSize="@dimen/text_20" />

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inspection_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ccajk.Fragments.InspectionFragment">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textview_add_inspection_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textview_current_location"
        android:clickable="true"
        android:drawableTint="@color/colorAccent"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_large"
        android:text="Add Inspection Image"
        android:textSize="@dimen/text_18" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textview_selected_image_count_inspection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/text_15"
        android:textStyle="bold"
        android:padding="@dimen/padding_medium" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_selected_images_inspection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/textview_add_inspection_image"
        android:layout_below="@id/textview_selected_image_count_inspection"
        android:layout_margin="@dimen/margin_medium"
        android:background="@color/colorOffWhite">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textview_current_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_upload"
        android:layout_marginBottom="@dimen/margin_medium"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_medium"
        android:text="Current Location - N/A"
        android:textAlignment="textStart"
        tools:ignore="RtlCompat" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_button"
        android:text="UPLOAD"
        android:textColor="@color/colorOffWhite"
        android:textSize="@dimen/text_20" />

</RelativeLayout>


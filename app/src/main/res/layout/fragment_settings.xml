<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_medium"
    tools:context="com.mycca.Fragments.SettingsFragment">


    <Switch
        android:id="@+id/switch_settings_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:checked="true"
        android:drawablePadding="@dimen/padding_large"
        android:drawableTint="@color/colorAccent"
        android:padding="@dimen/padding_medium"
        android:switchPadding="@dimen/padding_large"
        android:text="Notifications:"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@color/colorGray" />

    <LinearLayout
        android:id="@+id/layout_settings_change_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_settings_change_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/padding_large"
            android:drawableTint="@color/colorAccent"
            android:paddingLeft="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_medium"
            android:text="Change State"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_20" />

        <TextView
            android:id="@+id/tv_settings_curent_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_xxxlarge"
            android:text="Current State: "
            android:textSize="@dimen/text_20"
            android:textStyle="italic" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@color/colorGray" />

</LinearLayout>

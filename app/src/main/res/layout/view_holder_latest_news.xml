<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium"
    android:background="@color/colorWhite"
    android:elevation="@dimen/elevation_large"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/corner_radius_min">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_medium">

        <TextView
            android:id="@+id/textview_news_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:paddingRight="@dimen/padding_large"
            android:text="Headline"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_news_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_news_headline"
            android:layout_marginTop="@dimen/margin_large"
            android:fontFamily="serif"
            android:maxLines="1"
            android:visibility="gone"
            android:text="details"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_18" />

        <TextView
            android:id="@+id/textview_news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/textview_news_detail"
            android:fontFamily="serif"
            android:text="date"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_18"
            android:textStyle="italic" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

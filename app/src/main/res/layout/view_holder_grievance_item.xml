<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:elevation="@dimen/elevation_medium">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/padding_large"
        android:paddingTop="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_large"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textview_pensioner"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_grievance_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="TextView"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_15" />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_grievance_subtype"
        android:padding="@dimen/padding_medium"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/text_18"
        android:text="subtype"
        android:layout_below="@id/textview_pensioner"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_large"
        android:id="@+id/expandable_layout_grievance"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_15"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Mobile">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/textview_pensioner_mobile">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_15"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Applied on">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/textview_date_of_grievance"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_15"
                android:id="@+id/grievance_status_text"
                android:layout_alignParentStart="true"
                android:text="Grievance Status">
            </TextView>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/grievance_status_text"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_spinner"
                android:textAlignment="viewStart"
                android:layout_marginLeft="@dimen/padding_large"
                android:id="@+id/spinner_update_status">

            </Spinner>

        </RelativeLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_large"
                android:paddingRight="@dimen/padding_large"
                android:layout_marginTop="@dimen/margin_large"
            >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Grievance Message"
                    android:id="@+id/editTextGrievanceMessage"/>
            </android.support.design.widget.TextInputLayout>




        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_update_grievance"
            android:text="UPDATE"
            android:textSize="@dimen/text_20"
            android:background="@drawable/custom_button"
            android:textColor="@color/colorWhite"
            android:paddingLeft="@dimen/padding_xxlarge"
            android:paddingRight="@dimen/padding_xxlarge"
            android:drawablePadding="@dimen/padding_medium"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"></View>
</LinearLayout>
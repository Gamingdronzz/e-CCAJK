<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:elevation="@dimen/elevation_medium"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_large"
        android:paddingTop="@dimen/padding_large">

        <TextView
            android:id="@+id/textview_pensioner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/padding_large"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@color/colorAccentDark"
            android:textSize="@dimen/text_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_grievance_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textview_pensioner"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_15"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/textview_grievance_subtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_pensioner"
            android:drawablePadding="@dimen/padding_large"
            android:gravity="center_vertical"
            android:text="subtype"
            android:textSize="@dimen/text_18" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/expandable_layout_grievance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_large"
        android:paddingTop="@dimen/padding_large">


        <TextView
            android:id="@+id/textview_pensioner_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTint="@color/colorAccentDark"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorBlack"
            android:drawablePadding="@dimen/padding_large"
            android:padding="@dimen/padding_medium"
            android:text="mobile"
            android:textSize="@dimen/text_15">

        </TextView>


        <TextView
            android:id="@+id/textview_date_of_grievance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTint="@color/colorAccentDark"
            android:textColor="@color/colorBlack"
            android:layout_alignParentEnd="true"
            android:drawablePadding="@dimen/padding_large"
            android:padding="@dimen/padding_medium"
            android:text="date"
            android:textSize="@dimen/text_15" />


        <TextView
            android:id="@+id/textview_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTint="@color/colorAccentDark"
            android:textColor="@color/colorBlack"
            android:drawablePadding="@dimen/padding_large"
            android:padding="@dimen/padding_medium"
            android:text="status"
            android:textSize="@dimen/text_15" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:visibility="gone">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editTextGrievanceMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Grievance Message" />
        </android.support.design.widget.TextInputLayout>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_update_grievance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_button_rounded"
            android:drawablePadding="@dimen/padding_medium"
            android:drawableTint="@color/colorWhite"
            android:paddingLeft="@dimen/padding_xxlarge"
            android:paddingRight="@dimen/padding_xxlarge"
            android:text="UPDATE"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_18" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:background="@color/colorGray"></View>
</LinearLayout>